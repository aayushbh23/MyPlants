@{
    ViewData["Title"] = "Order Confirmed";
}
<div class="container text-center mt-5">
    <h1 class="display-6 text-success">Order placed successfully</h1>
    @if (TempData["OrderSuccess"] != null)
    {
        <p class="lead">@TempData["OrderSuccess"]</p>
    }
    <p>Your cart has been cleared and A confirmation email has been sent.</p>
    <a asp-controller="Catalog" asp-action="Index" class="btn btn-success mt-3">‚Üê Continue Shopping</a>
</div>
