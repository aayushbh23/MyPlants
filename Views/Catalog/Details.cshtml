@model PlantsCatalog.Models.Plant
@{
    ViewData["Title"] = "Product Details";
}

<div class="d-flex flex-column align-items-center text-center mt-4">
    <h2 class="mb-4">@Model.Name</h2>

    <div class="product-details border rounded p-4 shadow-sm" style="max-width: 500px;">
        <div class="product-image mb-3">
            <img src="~/images/@Model.ImageFile" alt="@Model.Name plant" class="img-fluid rounded" width="300" />
        </div>

        <div class="product-info align-items-start mb-3">
            <p><strong>Price:</strong> @string.Format("{0:C}", Model.Price)</p>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Category:</strong> @Model.Category</p>
        </div>

        <!-- Add to Cart Form -->
        <form asp-controller="Cart" asp-action="Add" method="post" class="add-to-cart-form d-flex justify-content-center align-items-center gap-2">
            <input type="hidden" name="id" value="@Model.Id" />
            <label for="qty" class="me-1">Quantity:</label>
            <input type="number" id="qty" name="quantity" value="1" min="1" class="form-control form-control-sm text-center" style="width:70px;" />
            <button type="submit" class="btn btn-sm btn-outline-success">Add to Cart</button>
        </form>
    </div>

    <p class="mt-3">
        <a asp-controller="Catalog" asp-action="Index" class="btn btn-secondary">‚Üê Continue Shopping</a>
    </p>
</div>
