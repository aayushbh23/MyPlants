@{
    ViewData["Title"] = "Home";
}
<div class="text-center">
    <h1 class="display-4">Welcome to My Plants </h1>
    <p class="lead">Indoor Plants for your home, office or heart <3</p>
    @* <a class="btn btn-success btn-lg" asp-controller="Catalog" asp-action="Index">Shop Now</a>
    <span>..</span> *@
</div>

<section class="plant-carousel">
    <div id="plantCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="4500">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#plantCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#plantCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#plantCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/plant1.jpg" class="d-block w-100" alt="Monstera plant">
                <div class="carousel-caption">
                    <h1 class="display-6 fw-bold">Welcome to My Plants</h1>
                    <p class="lead">Browse our green collection.</p>
                    <a class="btn btn-success btn-lg" asp-controller="Catalog" asp-action="Index">Explore Now</a>
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/images/plant2.jpg" class="d-block w-100" alt="Indoor plant corner">
                <div class="carousel-caption">
                    <h1 class="display-6 fw-bold">Bring Nature Indoors</h1>
                    <p class="lead">Hand-picked indoor plants for every style.</p>
                    <a class="btn btn-outline-light btn-lg" asp-controller="Catalog" asp-action="Index">Shop Now</a>
                </div>
            </div>

            <div class="carousel-item">
                <img src="~/images/plant3.jpg" class="d-block w-100" alt="Modern plant shelf">
                <div class="carousel-caption">
                    <h1 class="display-6 fw-bold">Style Your Space</h1>
                    <p class="lead">From desktops to living rooms.</p>
                    <a class="btn btn-success btn-lg" asp-controller="Catalog" asp-action="Index">Browse Now</a>
                </div>
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#plantCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#plantCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>